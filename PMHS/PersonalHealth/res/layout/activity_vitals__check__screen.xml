<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Vitals_Check_Screen"
    android:background="#5CE65C" >

    

    <TextView
        android:id="@+id/healthyview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are healthy" 
        android:textSize="72sp"
        />
    <TextView
        android:id="@+id/BPsys2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/BPdia2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/chol2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/glut2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/temp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/stats2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        />
    <Button
        android:id="@+id/VitalCheckCont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue" 
        android:onClick="Go_To_Vital_Screen"/>
    
    
</LinearLayout>
