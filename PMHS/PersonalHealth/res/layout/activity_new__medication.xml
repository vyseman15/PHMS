<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".New_Medication" >

    <TextView
        android:id="@+id/NewMed1Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="New Medication Page 1 of 3"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/NewMed1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8" />

        <TextView
            android:id="@+id/NewMed1NameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medication Name"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/NewMed1OTC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8" />

        <TextView
            android:id="@+id/NewMed1OTCText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTC Name"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/NewMed1SpecInst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="3"
            android:ems="8"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/NewMed1SpecInstText"
            android:layout_width="108dp"
            android:layout_height="48dp"
            android:text="Special \nInstructions"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <Button
        android:id="@+id/NewMed1ToNewMed2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="Go_To_Next_2"
        android:text="Next Step" />

    

    

        

    

    
</LinearLayout>